{
  // === Visual ===
  "editor.stickyScroll.enabled": true,
  "editor.fontFamily": "\"Courier Prime Code\", monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 15,
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "editor.guides.bracketPairs": "active",
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "boundary",
  "workbench.colorTheme": "Jellyfish",
  "workbench.editor.tabActionLocation": "left",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.list.smoothScrolling": true,
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "newUntitledFile",
  "explorer.compactFolders": false,
  "window.dialogStyle": "custom",
  "window.title": "${appName} ${separator} ${rootName}",
  "window.titleBarStyle": "custom",
  // === Editor ===
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "debug.onTaskErrors": "debugAnyway",
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.hover.sticky": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 8,
  "search.exclude": {
    "**/node_modules": true,
    // git
    "**/.git": true,
    "**/.github": true,
    // package manager stuff
    "**/.pnpm": true,
    "**/.yard": true,
    "**/bun.lockt": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn.lock": true,
    // build files
    "**/*.nuxt": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/.output": true,
    "**/out/**": true,
    // couldn't care less
    "**/.vscode": true,
    "**/*.svg": true,
    "**/assets": true,
    "**/bower_components": true,
    "**/public": true,
    "**/temp": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true,
  },
  "extensions.autoUpdate": "onlyEnabledExtensions",
  // === Extensions Configs ===
  // Emmet
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  // Tailwind Fold
  "tailwind-fold.autoFold": false,
  "tailwind-fold.unfoldedTextOpacity": 0.6,
  // Error Lens
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],
  "errorLens.excludeBySource": [
    "cSpell",
    "Grammarly",
    "eslint"
  ],
  // Eslint
  "eslint.quiet": true,
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "format/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  // Grammar
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  // Prettier
  "prettier.enable": false,
  "prettier.printWidth": 200,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  // vscode injected these couldn't care to categorize
}
